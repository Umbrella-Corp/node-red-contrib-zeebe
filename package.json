{
    "name": "node-red-contrib-zeebe",
    "version": "0.6.1",
    "description": "Zeebe nodes for Node-RED ",
    "main": "index.js",
    "scripts": {
        "test": "jest --testPathIgnorePatterns integration --forceExit --detectOpenHandles",
        "test:integration": "jest --forceExit --detectOpenHandles"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pedesen/node-red-contrib-zeebe.git"
    },
    "author": "pedesen",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/pedesen/node-red-contrib-zeebe/issues"
    },
    "homepage": "https://github.com/pedesen/node-red-contrib-zeebe#readme",
    "keywords": [
        "node-red",
        "zeebe",
        "camunda",
        "bpmn",
        "workflow",
        "microservice"
    ],
    "dependencies": {
        "uuid": "^3.3.2",
        "zeebe-node": "^0.21.1"
    },
    "devDependencies": {
        "eslint": "^6.1.0",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "lint-staged": "^9.4.2",
        "node-red": "^1.0.1",
        "node-red-node-test-helper": "^0.2.3"
    },
    "node-red": {
        "nodes": {
            "zeebe": "nodes/zeebe.js",
            "workflow-instance": "nodes/workflow-instance.js",
            "task-worker": "nodes/task-worker.js",
            "complete-task": "nodes/complete-task.js",
            "publish-message": "nodes/publish-message.js",
            "publish-start-message": "nodes/publish-start-message.js",
            "deploy": "nodes/deploy.js"
        }
    },
    "jest": {
        "testEnvironment": "node"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "lint-staged": {
        "{nodes,util}/**/*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
